<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- RelativeLayout para contener los elementos -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Imagen de fondo, va al principio para que quede detrás -->
        <ImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_splash" />

        <!-- Vista que será animada (cortina) -->
        <ImageView
            android:id="@+id/curtain_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/cortina2" />

        <!-- Nueva imagen agregada cerca del top -->
        <ImageView
            android:id="@+id/new_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/logo2" />
		
			
		<TextView
    android:id="@+id/txtValorEstado"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Este es el estado actual :"
    android:textColor="#000000"
    android:background="@android:color/transparent"
    android:visibility="invisible"
    android:layout_above="@id/button_start"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:textSize="16sp" />
        <Button
            android:id="@+id/button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Estados"
            android:layout_below="@id/new_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
